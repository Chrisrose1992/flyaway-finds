{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/components/*": ["components/*"],
      "@/database/*": ["database/*"],
      "@/config/*": ["config/*"],
      "@/middleware/*": ["middleware/*"],
      "@/data/*": ["data/*"],
      "@/utils/*": ["utils/*"],
      "@/context/*": ["context/*"]
    },
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src"]
}
